<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.starwingsapp.Dashboard">

    <include layout="@layout/toolbar"
        android:layout_height="30dp"
        android:layout_width="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/about_us"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_home"
        app:layout_constraintRight_toLeftOf="@+id/courses"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="137dp" />

    <ImageView
        android:id="@+id/courses"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_book"
        app:layout_constraintRight_toLeftOf="@+id/schedule"
        app:layout_constraintLeft_toRightOf="@+id/about_us"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="138dp" />

    <ImageView
        android:id="@+id/schedule"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_calendar_with_a_clock_time_tools"
        app:layout_constraintRight_toLeftOf="@+id/batches"
        app:layout_constraintLeft_toRightOf="@+id/courses"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="137dp" />

    <ImageView
        android:id="@+id/batches"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/schedule"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="137dp" />
    <View
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="74dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="24sp"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:text="Hey There!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

</android.support.constraint.ConstraintLayout>
